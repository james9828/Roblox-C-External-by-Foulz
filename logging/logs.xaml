<Window x:Class="FoulzExternal.logging.LogsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AXIOM CONSOLE" Height="420" Width="640"
        Background="#050505" Foreground="#EEE"
        WindowStyle="None" ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True" Opacity="0.98">

	<Window.Resources>
		<Style x:Key="GlowClose" TargetType="Button">
			<Setter Property="Background" Value="#151515"/>
			<Setter Property="Foreground" Value="#666"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="b" Background="{TemplateBinding Background}" CornerRadius="3">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="b" Property="Background" Value="#202020"/>
								<Setter Property="Foreground" Value="White"/>
								<Trigger.EnterActions>
									<BeginStoryboard>
										<Storyboard>
											<ColorAnimation Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)" To="White" Duration="0:0:0.2"/>
											<DoubleAnimation Storyboard.TargetName="b" Storyboard.TargetProperty="Opacity" To="0.8" Duration="0:0:0.2"/>
										</Storyboard>
									</BeginStoryboard>
								</Trigger.EnterActions>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>

	<Border BorderBrush="#111" BorderThickness="1" Background="#080808" CornerRadius="6" Padding="8">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="34"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<Border Background="#0B0B0B" MouseLeftButtonDown="move_it" CornerRadius="4">
				<Grid>
					<TextBlock Text="DEBUG CONSOLE" VerticalAlignment="Center" Margin="12,0,0,0" FontSize="11" FontWeight="Bold" Foreground="#444"/>
					<Button Content="✕" HorizontalAlignment="Right" Width="34" Height="28"
                            Style="{StaticResource GlowClose}"
                            Click="bye" Cursor="Hand" Margin="0,3,3,3">
						<Button.Effect>
							<DropShadowEffect BlurRadius="10" Color="{DynamicResource AccentColor}" Opacity="0.6" ShadowDepth="0"/>
						</Button.Effect>
					</Button>
				</Grid>
			</Border>

			<ScrollViewer Grid.Row="1" Margin="0,5,0,0"
                          VerticalScrollBarVisibility="Hidden"
                          HorizontalScrollBarVisibility="Disabled">
				<StackPanel x:Name="console_out" Background="#070707" />
			</ScrollViewer>
		</Grid>
	</Border>
</Window>