import subprocess
import os

def run(cmd):
    subprocess.run(cmd, check=True)

# Ensure git identity exists
subprocess.run(["git", "config", "--global", "user.name", "james9828"])
subprocess.run(["git", "config", "--global", "user.email", "your_github_email"])

# Stage EVERYTHING (including deletions)
run(["git", "add", "-A"])

# Commit if needed
subprocess.run(["git", "commit", "-m", "Full sync from local"], check=False)

# Force push local state to remote
run(["git", "push", "origin", "main", "--force"])

print("Remote fully overwritten with local folder.")