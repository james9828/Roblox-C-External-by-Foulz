import os
import sys
import subprocess

def run(cmd):
    subprocess.run(cmd, check=True)

def run_ignore(cmd):
    try:
        subprocess.run(cmd, check=True)
    except subprocess.CalledProcessError:
        pass

if len(sys.argv) < 2:
    print("Usage: python z.py YourSolution.sln")
    sys.exit(1)

sln = sys.argv[1]

if not os.path.exists(sln):
    print("Solution file not found.")
    sys.exit(1)

# Ensure identity
run_ignore(["git", "config", "--global", "user.name", "james9828"])
run_ignore(["git", "config", "--global", "user.email", "your_github_email"])

workflow = f"""name: Build

on:
  push:
  workflow_dispatch:

jobs:
  build:
    runs-on: windows-latest

    steps:
    - uses: actions/checkout@v4

    - name: Setup MSBuild
      uses: microsoft/setup-msbuild@v1.3

    - name: Build Solution
      run: msbuild "{sln}" /p:Configuration=Release

    - name: Upload Artifact
      uses: actions/upload-artifact@v4
      with:
        name: build-output
        path: |
          **/bin/Release/**
"""

os.makedirs(".github/workflows", exist_ok=True)

with open(".github/workflows/build.yml", "w") as f:
    f.write(workflow)

# Stage EVERYTHING
run_ignore(["git", "add", "-A"])

# Commit if needed
try:
    run(["git", "commit", "-m", "Auto update workflow + sync"])
except subprocess.CalledProcessError:
    print("Nothing new to commit.")

# Sync remote safely
run_ignore(["git", "pull", "origin", "main", "--rebase"])

# Push
run(["git", "push", "origin", "main"])

print("Repository fully synced and pushed.")